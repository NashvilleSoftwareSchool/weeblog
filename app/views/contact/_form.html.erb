<%= form_tag(contact_index_path, :method => 'post') do %>
  <p><%= label_tag :name %></p>
   <p><%= text_field_tag :name, params[:name] %></p>
   <p><%= label_tag :email %></p>
   <p><%= text_field_tag :email, params[:email] %></p>
  <p><%= label_tag :subject %></p>
   <p><%= text_field_tag :subject, params[:subject]  %></p>
   <p><%= label_tag :body %></p>
   <p><%= text_area_tag :body, params[:body], :size => "50x10" %></p>
   <p><%= submit_tag 'Send Email' %></p>
<%- end %>

